{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext", // newly added "ESNext to NodeNext"
    "moduleResolution": "node16", // newly added "node to node16"
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true // newly added
  }
}
